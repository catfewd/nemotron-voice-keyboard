<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_title"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/card_title"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/text_welcome_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/welcome_subtitle"
            android:textSize="16sp"
            android:textColor="@color/ime_text_secondary"
            android:layout_marginBottom="32dp"/>

        <!-- Permission Card (Visible if needed) -->
        <LinearLayout
            android:id="@+id/card_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="4dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perm_mic_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/record_red"
                android:layout_marginBottom="8dp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/perm_mic_desc"
                android:textColor="@color/ime_text_secondary"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btn_grant_perms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_grant"
                style="@style/ButtonStyle"
                android:backgroundTint="@color/colorAccent"/>
        </LinearLayout>

        <!-- IME Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/section_ime"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/card_title"/>
                
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_btn_speak_now"
                    android:tint="@color/colorAccent"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_ime"
                android:textColor="@color/ime_text_secondary"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btn_ime_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_ime_settings"
                style="@style/ButtonStyle"
                android:backgroundTint="@color/colorAccent"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_voice_settings"
                android:textColor="@color/ime_text_secondary"
                android:textSize="14sp"
                android:padding="8dp"
                android:background="#1A888888"/>
        </LinearLayout>

        <!-- Theme Settings Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_theme"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/card_title"
                android:layout_marginBottom="12dp"/>

            <Switch
                android:id="@+id/switch_dark_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/theme_dark_mode"
                android:textColor="@color/ime_text_primary"
                android:textSize="16sp"
                android:padding="8dp"/>
        </LinearLayout>

        <!-- Subtitles Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/section_subs"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/card_title"/>
                    
                 <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_media_play"
                    android:tint="@color/colorAccent"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_subs"
                android:textColor="@color/ime_text_secondary"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btn_subs_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_subs_start"
                style="@style/ButtonStyle"
                android:backgroundTint="@color/colorAccent"/>
        </LinearLayout>

        <!-- Credits Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:elevation="4dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/section_credits"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/card_title"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/desc_credits"
                android:textColor="@color/ime_text_secondary"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/credit_catfewd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credit_catfewd"
                style="@style/ButtonStyle"
                android:backgroundTint="#FF4081"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/credit_altunenes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credit_altunenes"
                style="@style/ButtonStyle"
                android:backgroundTint="#607D8B"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/credit_notune"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credit_notune"
                style="@style/ButtonStyle"
                android:backgroundTint="#607D8B"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/credit_lokkju"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credit_lokkju"
                style="@style/ButtonStyle"
                android:backgroundTint="#607D8B"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/credit_ort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credit_ort"
                style="@style/ButtonStyle"
                android:backgroundTint="#607D8B"
                android:layout_marginBottom="8dp"/>

            <Button
                android:id="@+id/credit_cpal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/credit_cpal"
                style="@style/ButtonStyle"
                android:backgroundTint="#607D8B"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- Status Footer -->
        <TextView
            android:id="@+id/text_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Checking..."
            android:gravity="center"
            android:textColor="@color/textSecondary"
            android:textSize="14sp"/>

    </LinearLayout>
</ScrollView>